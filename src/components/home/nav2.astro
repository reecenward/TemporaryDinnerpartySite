import MainCta from "../myComponents/main-cta.astro";
---

<div class="md:container md:mx-auto p-3 py-6 ">
  <header class="lg:flex  gap-5">
    <Astronav>
      <div class="flex w-full justify-between">
        <a href="/">Dinnerparty</a>
        <div class="block lg:hidden">
          <MenuIcon class="w-12 h-12" />
        </div>
      </div>
      <MenuItems class="hidden lg:flex w-full">
        <ul class="flex flex-col sm:flex-row items-center justify-end list-none">
          <li><a class="al"  href="/studio">Studio</a></li>
          <li> <a class="al pb-12 sm:pb-0" href="/tidbits">Tidbits</a></li>
          <li ></li><MainCta/></li>
